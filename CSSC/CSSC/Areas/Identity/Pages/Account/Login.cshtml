@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sessão";
}


<div class="text-center">
<h1>@ViewData["Title"]</h1>
<div class="row">
        <div style="width: 50%; margin: 0 auto; text-align: center;">
        <section>
            <form id="account" method="post">
                
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating" style="margin-top: 10px;">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                    <div class="form-floating" style="margin-top: 10px;">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                    <div style="width: 20%; margin: 0 auto; text-align: center; margin-top: 30px;">
                        <style>
                           /* Custom button styles */
                           #login-submit {
                                background-color: #000; /* Change background color to white */
                                color: #fff; /* Change text color to black */
                                font-size: 14px; /* Adjust font size */
                                padding: 0.5rem 1rem; /* Adjust padding */
                                border: 1px solid #000; /* Add border */
                            }
                        </style>

                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Iniciar Sessão</button>
                    
                    </div>
                    <div style="margin-top: 10px;">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"> Não possui conta? Registar-me</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
