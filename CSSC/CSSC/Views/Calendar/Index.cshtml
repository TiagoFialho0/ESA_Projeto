@model CalendarViewModel  
@using (Html.BeginForm("ShowCalendar", "Calendar", FormMethod.Post))
{
<div class="form-group">
    @Html.LabelFor(m => m.StartDate, "Start Date:")
    @Html.TextBoxFor(m => m.StartDate, new { @type = "date" }) <span class="text-danger" asp-validation-for="StartDate"></span> </div>
<div class="form-group">
    @Html.LabelFor(m => m.EndDate, "End Date:")
    @Html.TextBoxFor(m => m.EndDate, new { @type = "date" }) <span class="text-danger" asp-validation-for="EndDate"></span> </div>
<button type="submit" class="btn btn-primary">Submit</button>
}