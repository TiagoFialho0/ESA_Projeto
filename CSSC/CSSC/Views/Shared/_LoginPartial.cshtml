@using Microsoft.AspNetCore.Identity
@using CSSC.Areas.Identity.Data

@inject SignInManager<CSSCUser> SignInManager
@inject UserManager<CSSCUser> UserManager

<ul class="navbar-nav pull-right">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item" >
            <a id="manage" class="nav-link text-dark"  title="Nome de Utilizador">@UserManager.GetUserName(User)</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark" title="Terminar sessão">
                    <img src="~/icons8-sair-100.png" alt="Logout" style="width: 20px; height: 20px; margin-bottom:3px;">
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Registar</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
