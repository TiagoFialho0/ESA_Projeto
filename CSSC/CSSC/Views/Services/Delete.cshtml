@model CSSC.Models.Services

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    body {
        background-color: #EAEAEA; /* Define a cor de fundo da página */
    }

    dd {
        text-align: left;
    }

    dt {
        text-align: left;
    }
</style>
<div class="text-center">
    <h1>Remover</h1>
    <h3>Tem a certeza que deseja remover este serviço?</h3>
</div>
<div class="text-center">
    <hr />
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <dl class="row">
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.ServMarcaVeiculo)
                </dt>
                <dd class="col-sm-4">
                    @Html.DisplayFor(model => model.ServMarcaVeiculo)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.ServModeloVeiculo)
                </dt>
                <dd class="col-sm-4">
                    @Html.DisplayFor(model => model.ServModeloVeiculo)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.ServMatriculaVeiculo)
                </dt>
                <dd class="col-sm-4">
                    @Html.DisplayFor(model => model.ServMatriculaVeiculo)
                </dd>
                
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.EstadoDoServico)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.EstadoDoServico)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.ServDataInicio)
                </dt>
                <dd class="col-sm-4">
                    @Html.DisplayFor(model => model.ServDataInicio)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.ServClassificacao)
                </dt>
                <dd class="col-sm-5">
                    @if (string.IsNullOrEmpty(Model.ServClassificacao.ToString()))
                    {
                        <text>Sem Classificação</text>
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.ServClassificacao)
                    }
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.ServComentario)
                </dt>
                <dd class="col-sm-7">
                    @if (Model.ServComentario == null || string.IsNullOrEmpty(Model.ServComentario.ToString()))
                    {
                        <text>Sem Comentário</text>
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.ServComentario)
                    }
                </dd>
            </dl>
        </div>
        <div class="col-sm-4"></div>
    </div>




</div>
<div class="form-group d-flex justify-content-center mt-3">
    <div style="margin-right: 100px;">
        <a asp-action="Index" class="btn btn-secondary" style="background-color: #E36D3F; border-color: white;">Voltar</a>
    </div>
    <div style="margin-left: 100px;">
        <form asp-action="Delete">
            <input type="hidden" asp-for="IdServico" />
            <input type="submit" value="Remover" class="btn btn-danger" style="background-color: #B22222; border-color: white;" />
        </form>
    </div>
</div>
